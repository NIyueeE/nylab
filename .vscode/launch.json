{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Backend",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/app"
        }
      ],
      "justMyCode": false
    },
    {
      "name": "Run Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/test/backend_test.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      }
    },
    {
      "name": "Chrome: Frontend (Production)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:80",
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMaps": true,
      "trace": true,
      "skipFiles": [
        "node_modules/**",
        "vite/**"
      ]
    },
    {
      "name": "Chrome: Frontend (Development)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMaps": true,
      "trace": true,
      "skipFiles": [
        "node_modules/**"
      ]
    }
  ]
}